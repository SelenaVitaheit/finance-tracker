<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h2 class="mb-0">Редактирование транзакции</h2>
          <div class="badge bg-<%= @transaction.transaction_type == 'income' ? 'success' : 'danger' %>">
            <%= @transaction.transaction_type == 'income' ? 'Доход' : 'Расход' %>
          </div>
        </div>
        <div class="card-body">
          <!-- Информация о текущей транзакции -->
          <div class="alert alert-light mb-4">
            <div class="row">
              <div class="col-md-6">
                <strong>Текущая сумма:</strong> 
                <span class="h5 <%= @transaction.transaction_type == 'income' ? 'text-success' : 'text-danger' %>">
                  <%= number_to_currency(@transaction.amount, unit: '₽', format: '%n %u') %>
                </span>
              </div>
              <div class="col-md-6">
                <strong>Дата:</strong> <%= l(@transaction.date, format: :long) %>
              </div>
            </div>
            <div class="mt-2">
              <strong>Описание:</strong> <%= @transaction.description %>
            </div>
          </div>
          
          <!-- Форма -->
          <%= render 'form', transaction: @transaction %>
        </div>
        <div class="card-footer">
          <small>Изменения сохранятся сразу после нажатия "Обновить".</small>
        </div>
      </div>
      
      <div class="mt-4 text-center">
        <%= link_to 'Показать транзакцию', @transaction, class: 'btn btn-outline-primary me-2' %>
        <%= link_to 'Назад к списку', transactions_path, class: 'btn btn-outline-secondary' %>
      </div>
    </div>
  </div>
</div>